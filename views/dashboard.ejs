<%- include('_header') %>

	
	<div class="all-title-box">
		<div class="container text-center">
			<h1><%= user.name %><span class="m_1">Book Management</span></h1>
		</div>
	</div>

	<br><br><br>

<center>
	<button style="background-color:rgb(228, 103, 20);color:white;width:60%;" type="button" class="btn btn-primary" data-toggle="modal" data-target="#create">
		Create Book & Share
	</button>


</center><br><br>
<hr><br><br>
<h2 style="margin-left:45% ;">My barrowed books</h2>
<div id="overviews" class="section wb">

	<div class="container">
<div class="row"> 
	<% for (let i=0; i< user.books.length; i++){ %> <!-- Kullanıcının aldığı kitaplarının uzunluğu bunu authcontrollerda populate etmiştim-->
		<div class="col-lg-6 col-md-6 col-12">
			<div class="course-item">
				<div class="course-br">
					<div class="course-title">
						<h2><a href="/books/<%= user.books[i].slug %>" title=""><%= user.books[i].baslik %></a></h2>
					</div>
					<div class="course-desc">
						<p><%= user.books[i].desciription %></p> <!--Kullanıcının aldığı kitapların açıklaması populate kullanrak bunların arasındaki ilişkiyi ve veriyi çektim-->
					</div>
					<div class="course-rating">
						Yazar: <%= user.books[i].yazar %>						
					</div> <br>
					
					<!--İade etme formu-->
					<form method="POST" action="/books/et">
						<input type="hidden" name="book_id" value="<%= user.books[i]._id %>">
						<button class="btn btn-lg btn-danger text-white"><span> Return Book</span></button>
					  </form>
				</div>
				<div class="course-meta-bot">
					<ul>
						<li>Yayıncı: <%= user.books[i].yayinci %></li>
						<li>Editör: <%= user.books[i].editör %></li>
						<li>Baskı: <%= user.books[i].baski %></li>
						<li>Basım Yılı: <%= user.books[i].yil %></li>
						<li>Sayfa Sayısı: <%= user.books[i].sayfa %></li>
						<li>Dili: <%= user.books[i].dili %></li>
					</ul>
				</div>
			</div> <br>
		</div>
		<% } %>
</div>
</div>
</div>



<hr><br><br>
<h2 style="margin-left:30% ;">My shared books</h2>

<div id="overviews" class="section wb">

	<div class="container">
<div class="row"> 
